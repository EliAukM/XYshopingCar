<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="94dp"
        android:layout_marginBottom="2dp"
        android:background="@color/white">

        <CheckBox
            android:id="@+id/single_check_box"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="6dp"
            android:background="@null"
            android:button="@null"
            android:drawableLeft="@drawable/checkbox_bg"
            android:gravity="center"
            android:minWidth="20dp"
            android:minHeight="20dp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="6dp">

            <com.makeramen.roundedimageview.RoundedImageView xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/image_View"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:layout_centerVertical="true"
                android:layout_gravity="center"
                android:layout_marginLeft="4dp"
                android:scaleType="fitXY"
                android:src="@mipmap/aa"
                app:riv_corner_radius="6dp" />

            <TextView
                android:id="@+id/tv_goods_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="9dp"
                android:layout_marginTop="14dp"
                android:layout_marginRight="14dp"
                android:layout_toRightOf="@+id/image_View"
                android:ellipsize="end"
                android:lines="2"
                android:maxLines="2"
                android:text=""
                android:textColor="#333333"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/tv_describe"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_goods_name"
                android:layout_marginLeft="9dp"
                android:layout_marginTop="4dp"
                android:layout_toRightOf="@+id/image_View"
                android:ellipsize="end"
                android:lines="1"
                android:text=""
                android:textColor="#b5b5b5"
                android:textSize="11sp" />

            <TextView
                android:id="@+id/price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_describe"
                android:layout_marginLeft="9dp"
                android:layout_marginTop="4dp"
                android:layout_toRightOf="@+id/image_View"
                android:text=""
                android:textColor="#ff0300"
                android:textSize="15sp" />


            <ImageView
                android:id="@+id/iv_minus"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_below="@+id/tv_describe"
                android:layout_marginRight="1dp"
                android:layout_toLeftOf="@+id/tv_number"
                android:src="@mipmap/icon_minus_a" />

            <TextView
                android:id="@+id/tv_number"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_below="@+id/tv_describe"
                android:layout_marginRight="1dp"
                android:layout_toLeftOf="@+id/iv_add"
                android:background="#f5f5f5"
                android:gravity="center"
                android:paddingLeft="6dp"
                android:paddingTop="1dp"
                android:paddingRight="6dp"
                android:paddingBottom="2dp"
                android:text="1"
                android:textColor="#666"
                android:textSize="14sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/iv_add"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_below="@+id/tv_describe"
                android:layout_alignParentRight="true"
                android:layout_marginRight="14dp"
                android:src="@mipmap/icon_add_a" />

        </RelativeLayout>
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#F5F5F5" />
</LinearLayout>