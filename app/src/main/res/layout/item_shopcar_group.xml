<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_title"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#EEE"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20px"
        android:background="@drawable/shape_btn_c"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="70px">

            <CheckBox
                android:id="@+id/store_check_box"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20px"
                android:layout_marginRight="10px"
                android:background="@null"
                android:button="@null"
                android:drawableLeft="@drawable/checkbox_bg"
                android:gravity="center"
                android:minHeight="20dp"
                android:minWidth="20dp" />

            <TextView
                android:id="@+id/tv_shop_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10px"
                android:layout_toRightOf="@+id/store_check_box"
                android:text="荞XXX"
                android:textColor="@color/text_one"
                android:textSize="14sp" />

            <TextView
                android:visibility="gone"
                android:id="@+id/tv_discount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="25px"
                android:text="优惠券"
                android:textColor="@color/shop_red"
                android:textSize="14sp" />
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>